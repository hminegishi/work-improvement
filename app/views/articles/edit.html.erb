<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">記事の編集</h2>
        <%= form_with model: @article, local: true do |f|%>
        <%= render 'error_messages', model: f.object %>
          <div class="field">
            <%= f.label :title, "記事タイトル" %><br />
            <%= f.text_field :title, id:"article_title" %>
          </div>

          <div class="field">
            <%= f.label :text, "投稿内容" %><br />
            <%= f.text_area :text, class: :form__text, id:"article_text" %>
          </div>

          <div class="field">
            <%= f.label :image, "参考画像" %><br />
            <%= f.file_field :image, id:"article_image" %>
          </div>

          <div class="actions">
            <%= f.submit "保存する", class: :form__btn  %>
          </div>
        <% end %>
    </div>
  </div>
</div>